@model SkedPortal.Models.User

    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Login</h2>
            <hr />
            <h4>@ViewBag.Error</h4>
            <div class="form-group">
                <label class = "control-label col-md-2" >Username</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger", @type = "email" })
                </div>
            </div>
            <div class="form-group">
                <label class = "control-label col-md-2" >Password</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.hash, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.hash, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
