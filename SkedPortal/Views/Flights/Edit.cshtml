@model SkedPortal.Models.Flight

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<h4>@ViewBag.Error</h4>
<h4>@ViewBag.Flight_Error</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Flight</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2"> Flight Number</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.flight_number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.flight_number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Flight Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.flight_date, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.flight_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Flight Origin</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.flight_origin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.flight_origin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Flight Start</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.flight_start, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                @Html.ValidationMessageFor(model => model.flight_start, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Flight Destination</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.flight_destination, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.flight_destination, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Flight End</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.flight_end, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                @Html.ValidationMessageFor(model => model.flight_end, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Assigned</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.assigned)
                    @Html.ValidationMessageFor(model => model.assigned, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Completed</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.completed)
                    @Html.ValidationMessageFor(model => model.completed, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
